<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.javaFX.controllers.ConvertorsFrame"
            stylesheets="/frames/css/ConverterFrame.css">

    <GridPane styleClass="container"
              AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS">
            <HBox>
                <Label fx:id="label_ipv4"/>
                <JFXTextField fx:id="txt_ipv4"/>
            </HBox>
            <Label fx:id="label_ipv4_result"/>
            <JFXButton fx:id="button_ipv4" onAction="#convert_ipv4"/>
        </VBox>
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
            <HBox>
                <Label fx:id="label_netmask_cidr"/>
                <JFXTextField fx:id="txt_netmask_cidr"/>
            </HBox>
            <GridPane>
                <Label fx:id="label_netmask_cidr_result"
                    GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="label_netmask_cidr_result_class"
                    GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="label_netmask_cidr_result_hosts"
                    GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Label fx:id="label_netmask_cidr_result_subnets"
                    GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="label_netmask_cidr_result_wildcard"
                    GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
            <JFXButton fx:id="button_netmask_cidr" onAction="#convert_netmask_cidr"/>
        </VBox>
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="2">
            <HBox>
                <Label fx:id="label_requested_hosts"/>
                <JFXTextField fx:id="txt_requested_hosts"/>
            </HBox>
            <GridPane>
                <Label fx:id="label_requested_hosts_cidr"
                       GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="label_requested_hosts_netmask"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="label_requested_hosts_class"
                       GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Label fx:id="label_requested_hosts_subnets"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="label_requested_hosts_available"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label fx:id="label_requested_hosts_wildcard"
                       GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            </GridPane>
            <JFXButton fx:id="button_requested_hosts" onAction="#convert_requested_hosts"/>
        </VBox>
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="3">
            <HBox>
                <Label fx:id="label_wildcard_first_ip"/>
                <JFXTextField fx:id="txt_wildcard_first_ip"/>
                <Label text="-"/>
                <JFXTextField fx:id="txt_wildcard_last_ip"/>
                <Label fx:id="label_wildcard_last_ip"/>
            </HBox>
            <Label fx:id="label_wildcard_result"/>
            <JFXButton fx:id="button_wildcard" onAction="#convert_wildcard"/>
        </VBox>
    </GridPane>

</AnchorPane>
